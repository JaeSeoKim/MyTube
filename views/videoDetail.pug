extends layouts/main

block content
  .video-detail__container
    .video__player
      video(src=`/${video.fileUrl}` controls="controls")
    .video__info
      a(href=`${routes.videos}${routes.videoEdit(video.id)}`)
        button Edit Video
      h5.video__title=video.title
      p.video__description=video.description
      if video.views === 0
        span.video__views No view
      else if video.views === 1
        span.video__views 1 view
      else
        span.video__views #{video.views} views
    .video__comments
      if video.comments.length === 0
        span.video__comment-number No comment
      else if video.comments.length === 1
        span.video__comment-number 1 comment
      else
        span.video__comment-number #{video.comments.length} comments
