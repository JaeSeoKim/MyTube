extends layouts/main

block content
  .form-container
    form(action=`${routes.videos}${routes.upload}`, method="post")
      label(for="video") Upload Video
        input(type="file" id="video" name="file", required=true)
      input(type="text" placeholder="Video Title" name="title", required=true)
      textarea(type="text" placeholder="Video Descrtion" name="video_desc", required=true, cols="30" rows="10")
      input(type="submit" value="Update Video")
