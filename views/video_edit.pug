extends layouts/main

block content
  .form-container
    form(action=`${routes.videos}${routes.video_edit}`, method="post")
    input(type="text", placeholder="Video Title", name="title")
    textarea(type="text", placeholder="Video Descrtion", name="video_desc", cols="30", rows="10")
    label(for="video") Update Video
      input(type="file" id="video", name="video")
    input(type="submit", value="Update Video")
  a.form-container--link(href=`${routes.videos}${routes.video_delete}`) Video Delete!
